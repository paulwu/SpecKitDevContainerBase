{
    "name": "Spec-Kit Development Environment (Offline)",
    "build": {
        "dockerfile": "Dockerfile-offline"
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "GitHub.copilot",
                "GitHub.copilot-chat"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/bin/python3.11",
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    },

    "postCreateCommand": [
        "bash",
        "-c",
        "echo 'ðŸŒ± Spec-Kit Development Environment Ready!' && echo 'Run: specify check'"
    ],

    "remoteUser": "root",
    
    "forwardPorts": [8000, 3000, 5000, 8080]
}