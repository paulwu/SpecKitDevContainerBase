{
  "name": "speckittest",
  "version": "1.0.0",
  "description": "A DevContainer environment for testing and validating Spec-Kit programming",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts,.json",
    "lint:fix": "eslint . --ext .js,.ts,.json --fix",
    "format": "prettier --write .",
    "validate-schema": "ajv validate -s examples/schemas/user.schema.json -d examples/test-data/sample-user.json",
    "validate-api": "swagger-parser validate examples/api-specs/sample-api.yaml",
    "generate-types": "json2ts -i examples/schemas/user.schema.json -o types/user.d.ts"
  },
  "keywords": [
    "spec-kit",
    "devcontainer",
    "testing",
    "api-specification",
    "json-schema",
    "openapi"
  ],
  "author": "Spec-Kit Test",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "ts-jest": "^29.1.1"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.2",
    "jsonschema": "^1.4.1",
    "yaml": "^2.3.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.(js|ts)",
      "**/examples/**/*.test.(js|ts)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "examples/**/*.{js,ts}",
      "!**/node_modules/**",
      "!**/dist/**"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}